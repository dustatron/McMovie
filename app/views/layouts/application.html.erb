<!DOCTYPE html>
<html>
<head>
  <title>PDX McCord</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
 
    <nav class="navbar navbar-default"> 
      <div class="container-fluid"> <div class="navbar-header"> 
          <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-3" aria-expanded="false"> 
            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> 
            <span class="icon-bar"></span> <span class="icon-bar"></span> 
          </button> 
          <%= link_to "PDX McCord", root_path, :class => "navbar-brand" %>
        </div> 
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-3"> 
          <% if user_signed_in? %>  
             <%= link_to destroy_user_session_path, method: :delete do %>
                <button type="button" class="btn btn-default navbar-btn navbar-right">Log Out</button>
              <% end %>
              
             <%= link_to 'New Movie', new_movie_path, :class => "navbar-right" %>
             <div class="navbar-brand navbar-right">Hello, <%= current_user.email %>  </div>
            
             
          
            
            
            
          <% else %>
          
            <%= link_to new_user_session_path do %>
            <button type="button" class="btn btn-default navbar-btn">Sign in</button> 
            <% end %>
          <% end %>
        </div>
        
      </div>
    </nav>
  <div class="container">

    <%= yield %>
    
  </div>


</body>
</html>