<%= form_for([@movie, @movie.comments.build]) do |f| %>
    <p>
        <%= f.label current_user.name %>
        <%= f.hidden_field :user, :value => current_user.name %>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>
    <br>
    <p>
        <%= f.submit %>
    </p>

<% end %>