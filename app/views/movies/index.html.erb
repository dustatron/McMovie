<div class="container movie-list">


<div class="row">

    <% @movies.each do |movie| %>

      <!--the box-->
      <div class="col-sm-6 col-md-6 col-lg-4 reader-board">

        <div class="thumb-box">

        <div class="row images">
        <%  if (movie.backdrop == 'https://image.tmdb.org/t/p/w185/') %>

            <%= link_to movie do %>
              <%= image_tag("no-poster.jpg", :alt => "rss feed", class: "poster") %>
            <% end %>
          <% else %>
            <%= link_to movie do %>
                <%= image_tag( movie.backdrop, class: "poster") %>

            <% end %>
          <%end%>


        </div>

      <div class="shadow">

        <div class="row title">
            <% if movie.title? %>
              <span style="text-align:center;"> <%= link_to movie.title, movie %> </span>
              <span class="year"><%= movie.release_date.to_date.strftime("%Y") %> </span>
            <% else %>
              <span style="text-align:center;"> <%= link_to 'Edit', movie %> </span>
            <% end %>
        </div>
      </div>


        <div class="row voting">


          <div class="caption col-md-6 col-xs-6 text-left" >
              <%= link_to like_movie_path(movie), class: "like", method: :put do %>
                <button type="button" class="btn btn-success" aria-label-"Left Align">
                  <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
                  <span class="badge"><%= movie.get_upvotes.size %></span>
                </button>
              <% end %>

              <%= link_to unlike_movie_path(movie), class: "like", method: :put do %>
                <button type="button" class="btn btn-danger" aria-label-"Left Align">
                  <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
                  <span class="badge"><%= movie.get_downvotes.size %></span>
                </button>
              <% end %>
            </div>

           <div class="col-md-6 col-xs-6 text-right index-comment-count">
            COMMENTS <%= movie.comments.count %>
           </div>

        </div>


      </div>
      <!--end the box-->
    </div>
    <% end %>
  </div>
</div>
