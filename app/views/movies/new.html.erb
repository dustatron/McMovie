
<div class="row text-center">
  <h1>ADD A MOVIE</h1>
</div>

<div class="row text-center">
  <%= form_tag(new_movie_path, method: "get") do %>
  <div class="col-md-6 col-md-offset-3">
    <div class="input-group">
      <%= text_field_tag(:q, nil, class: "form-control") %>
      <span class="input-group-btn">
          <%= submit_tag("Search", class: "btn btn-primary")%>
      </span>
    </div>
  </div>
  <% end %>
</div>

<!-- List Out Movies -->
<div class="row text-center">
  <div class="col-md-8 col-md-offset-2">
    
  <% if @results.any? %>
    <h3> Total results <%= @results.count %> </h3>
    <% @results.movies.each do |movie| %>
      <%= form_for movie do |form| %>
        <%= form.hidden_field :title %>
        <%= form.hidden_field :image %>
        <%= form.hidden_field :body %>

        <div class="well read-out dark-color">
        
          <div class="row">
            <div class="col-md-4">
              <div>
                <%= image_tag movie.image, alt: "poster" %>
              </div> 
            </div>
            <div class="col-md-7 text-left">
              <div class="row">
                <h2>
                  <%= movie.title %>
                </h2>
              </div>
              <div class="row">
                <%= raw movie.body %>
              </div>
              <div class="row">
                <input type="submit" value="Add Movie" class="btn btn-primary">
                </input>
              </div>
            </div>
          </div>

        </div>
      <% end %>

    <% end %>
  <% else %>
    <p>No Search Results</p>
  <% end %>
  </div>

</div>


