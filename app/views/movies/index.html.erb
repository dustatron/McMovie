
    <% @movies.each do |movie| %>
      <!--the box-->
      <div class="col-sm-6 col-md-3 col-lg-2">
      
        <div class="thumbnail thumb-box">
          
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <% if movie.title? %>
                <h2 style="text-align:center;"> <%= link_to movie.title, movie %> </h2>
              <% else %>
                <h2 style="text-align:center;"> <%= link_to 'Edit', movie %> </h2>
              <% end %>
              
            </div>
          </div>
          
        <div class="row">
          <%= link_to movie do %>
            <%= image_tag( movie.image, class: "poster", size: "250x300") %>
          <% end %>
        </div>
        <div class="row">
          <div class="col-md-10">
            <p class='tag-line shorten'><%= movie.body %></p>
          </div>
        </div>
        
        <div class="row">
          <div class="caption" style="text-align:center;">
              <%= link_to like_movie_path(movie), class: "like", method: :put do %>
                <button type="button" class="btn btn-info" aria-label-"Left Align">
                  <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
                  <span class="badge"><%= movie.get_upvotes.size %></span>
                </button>
              <% end %>

              <%= link_to unlike_movie_path(movie), class: "like", method: :put do %>
                <button type="button" class="btn btn-info" aria-label-"Left Align">
                  <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
                  <span class="badge"><%= movie.get_downvotes.size %></span>
                </button>
              <% end %>
          </div>          
        </div>
      
      </div>
      <!--end the box-->
    </div>

    <% end %>
