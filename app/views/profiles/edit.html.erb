<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="jumbotron dark-color">
    <h1 class="text-center">EDIT PROFILE</h1>
  
      <%= form_for @user, url: profile_path, html: { method: :put } do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this movie from being saved:</h2>
      
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <form>
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
      
      
        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :tagline %><br>
          <%= f.text_field :tagline,  class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :bio %><br>
          <%= f.text_field :bio, class: "form-control" %>
        </div>
        
          <div class="form-group">
              <%= f.label :photo %><br>
              <%= f.text_field :photo, class: "form-control" %>
          </div>
        <div class="form-group">
          <%= f.submit "SUBMIT", :class => 'btn btn-primary btn-lg btn-block' %>
        </div>
        </form>
      <% end %>
    </div>
  </div>
</div>
