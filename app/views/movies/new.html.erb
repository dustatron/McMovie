
<h1>Add A New Movie</h1>


<%= form_tag(new_movie_path, method: "get") do %>
  <%= text_field_tag(:q)%>
  <%= submit_tag("Search")%>

<% end %>

<!-- List Out Movies -->
<div class="row">

  <!-- check for nil -->
  <% if (@searches['results'] != nil) then %>
    <%= render 'list' %>

  <% else %>
    <p>No Search Results</p>
    <!-- end of if statement -->
  <% end %>


</div>
