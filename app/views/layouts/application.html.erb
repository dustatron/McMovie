<!DOCTYPE html>
<html>
<head>
  <title>McMovie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-3" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span>
            <span class="icon-bar"></span> <span class="icon-bar"></span>
          </button>
          <%= link_to "McMovie", root_path, :class => "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-3">
        <ul class="nav navbar-nav navbar-right">
        	<li>
        		<%= link_to "ABOUT", about_path %>
        	</li>
        	<li>
        		<%= link_to 'ADD MOVIE', new_movie_path %>
        	</li>
        	<li>
        	  <% if user_signed_in? %>
             <%= link_to 'LOG OUT', destroy_user_session_path, :method => :delete %>



          <% else %>

          <%= link_to 'LOG IN', new_user_session_path %>

          <% end %>
        	</li>
        </ul>


        </div>

      </div>
    </nav>
  <div class="container">

    <%= yield %>

  </div>


</body>
</html>
