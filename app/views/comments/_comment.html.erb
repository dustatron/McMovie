<div class="col-md-12 comment-box dark-color block-center">
    <div class="col-md-12 comment-text">
        <h4><%= comment.user %>:</h4> <%= comment.body %>
    </div>
    <div class="col-md-6 bottom-row">
        Posted: <%= time_ago_in_words(comment.created_at) %> 
    </div>
    <div class="col-md-6 text-right bottom-row">
    <%= link_to 'Delete', [comment.movie, comment], :method => :delete, data: { confirm: "are you sure?"} %>
    </div>
</div>
