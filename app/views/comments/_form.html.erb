<div class="make-comment to-the-edge">
    <%= form_for([@movie, @movie.comments.build]) do |f| %>
    <div class="col-md-12">
        <% if current_user.name != ''%>
            <div class="col-md-12">
                <h4><%= f.label current_user.name %></h4>
                <%= f.hidden_field :user, :value => current_user.name %>
            </div>
        <% else %>
                <div class="col-md-12">
                  <h3><%= f.text_field :user, class: "form-control", placeholder: 'NAME' %></h3>
                </div>
        <% end %>
        <div class="col-md-12">
            <%= f.text_area :body, class: "comment-body form-control", placeholder: 'COMMENT HERE' %>
        </div>
        <div class="col-md-12">
            <%= f.submit 'ADD COMMENT', :class => "btn btn-lg btn-block btn-success active" %>
        </div>
    </div>

<% end %>
</div>
